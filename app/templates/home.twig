                            function submitf(){
                                var e = document.getElementById("fdate");
                                var value = e.options[e.selectedIndex].id;
                                {% for ditems in ditem %} 
                                    if( {{ ditems.sno }} == value){
                                        if({{ ditems.valid }}==0){
                                            document.getElementById("abc").style.color="red";
                                            document.getElementById("abc").style.textAlign="center";
                                            document.getElementById("abc").innerHTML="This Date is Already On Freez";
                                            document.getElementById("fdate").options.selectedIndex=0;
                                        }else{
                                            document.getElementById("abc").innerHTML="";
                                            window.location.href+="/freez/{{ditems.date}}/";
                                        }
                                    }
                                 {% endfor %}
                                
                            }
                            function submito(){
                                var e = document.getElementById("odate");
                                var value = e.options[e.selectedIndex].id;
                                {% for ditems in ditem %} 
                                    if( {{ ditems.sno }} == value){
