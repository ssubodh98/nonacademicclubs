                  <h3 class="box-title">Edit the Attendance</h3>
                </div>
                <form method="POST">
                <div class="box-body">
                    Select the Date:
                    <select id="date" name="date" class="form-control" onchange="enter()">
                      <option>Select Date:</option>
                        {% for ditems in ditem %} 
                        <option id="{{ ditems.sno }}">{{ ditems.date }}</option>
                        {% endfor %}
                    </select>
                </div>
                <script type="application/javascript">
                    function enter(){
                        //if(date.optSelected.id)
                        var e = document.getElementById("date");
                        var value = e.options[e.selectedIndex].id;
                        //document.getElementById("abc").innerHTML=;
                    
                        {% for ditems in ditem %} 
                            if( {{ ditems.sno }} == value){
                                if({{ ditems.valid }}==0){
                                    document.getElementById("abc").style.color="red";
                                    document.getElementById("abc").style.textAlign="center";
                                    document.getElementById("abc").innerHTML="This Date is Not Valid";
                                    document.getElementById("date").options.selectedIndex=0;
                                }else{
                                    document.getElementById("abc").innerHTML="";
                                }
                            }
                        {% endfor %}
                    }
                    pcount=0;
                    acount=0;
                </script>
                
                
                
                <div class="box-body">
                    
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th style="width: 15px">#</th>
                            <th>Register Number</th>
                            <th>Name           </th>
                            <th>Status         </th>
                            <th>Change Status  </th>
                        </tr>
                        {% for studs in stud %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                
                                <td>{{ studs.regno }}</td>
                                <input type="hidden" value="{{ studs.regno }}">
                                <td>{{ studs.firstname }} {{ studs.middlename }} {{ studs.lastname }}</td>
                                <td>
                                    <input type="checkbox" name="attend[]" value="{{ studs.regno }}" id="{{ studs.regno }}" onchange="selct(this.id)" checked>
                                </td>
                                <script>
                                    var pcount=pcount+1;
                                </script>
                                <td><button type="button" class="btn btn-block btn-warning btn-sm">Change</button></td>
                            </tr>
                        {% endfor %}
                        <script type="application/javascript">
                            document.getElementById("pid").innerHTML=pcount;
                            document.getElementById("aid").innerHTML=acount;
                            function selct(idd){
                                if(document.getElementById(idd).checked){
                                    pcount=pcount+1;
                                    acount=acount-1;
                                    document.getElementById("pid").innerHTML=pcount;
                                    document.getElementById("aid").innerHTML=acount;
                                }else{
                                    pcount=pcount-1;
                                    acount=acount+1;
                                    document.getElementById("pid").innerHTML=pcount;
                                    document.getElementById("aid").innerHTML=acount;
                                }
                            }

                        </script>
